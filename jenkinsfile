pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage("Build Artifact") {
        steps {
            script {
                sh 'mvn clean package -DskipTests'
            }
        }
        } 
          stage("Test") {
          steps {
            script {
                sh 'mvn test'
            }
        }
        }
   stage("deploy") {
        steps {
            sshagent(credentials: ['jenkins']) {
              sh "scp target/vprofile-v2.war ubuntu@52.90.92.201:~/"
              sh "ssh ubuntu@52.90.92.201 'sudo mv ~/vprofile-v2.war /var/lib/tomcat9/webapps/'"
              sh "ssh ubuntu@52.90.92.201 'sudo systemctl restart tomcat9'"
            }
            }
        }
   } 
}
