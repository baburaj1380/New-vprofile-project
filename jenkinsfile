pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage("Build Artifact") {
            steps {
                script {
                    sh 'mvn -f pom.xml clean package'
                }
            }
        }
        stage("Test") {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
    stage('Deploy') {
            steps {
                sshagent(credentials: ['ec2-jenkins-creds']) {
                sh 'scp -o StrictHostKeyChecking=no target/vprofile-v2.war ubuntu@3.88.130.137:/home/ubuntu'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@3.88.130.137 "sudo systemctl restart tomcat9"'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@3.88.130.137 "sudo cp vprofile-v2.war /var/lib/tomcat9/webapps"'
              }
            }
        }
    }
}