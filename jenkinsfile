pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage('Read POM') {
            steps {
                script {
                    def version = getMavenProjectVersion()
                    echo "Project version is: ${version}"
                    env.VERSION = version
                }
            }
        }
        
        stage("Build Artifact") {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }
        
        stage("Test") {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }  
        
        stage("Upload Artifact s3") {
            steps {
                script {
                    def version = env.VERSION
                    sh "aws s3 cp target/vprofile-${version}.war s3://automation-manual-us/vprofile-artifacts/vprofile-${version}.war"
                }
            }
        }   
    }
}

def getMavenProjectVersion() {
    def pomFile = file('pom.xml')
    def xmlSlurper = new XmlSlurper()
    def pom = xmlSlurper.parse(pomFile)
    def version = pom.version.text()
    return version
}