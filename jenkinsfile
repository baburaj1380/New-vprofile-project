pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage("Build Artifact") {
            steps {
                script {
                    sh 'mvn -f pom.xml clean package'
                }
            }
        }
    stage('Deploy') {
            steps {
                sshagent(credentials: ['ec2-tomcat-creds']) {
                sh 'scp -o StrictHostKeyChecking=no target/vprofile-v2.war ubuntu@52.90.92.201:/home/ubuntu'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@52.90.92.201 "sudo systemctl restart tomcat9"'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@52.90.92.201 "sudo cp vprofile-v2.war /var/lib/tomcat9/webapps"'
              }
            }
        }
    }
}