pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage('Read POM') {
            steps {
                script {
                    def pom = readMavenPom file: 'pom.xml'
                    def version = pom.version
                    echo "Project version is: ${version}"
                }
            }
        }
    stages {
        stage("Build Artifact") {
            steps {
                script {
                    sh 'mvn -f pom.xml clean package'
                }
            }
        }
        stage("Test") {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
        stage("Upload Artifact s3") {
            steps {
                script {
                    sh 'aws s3 cp target/vprofile-1.0.1.war s3://automation-manual-us/vprofile-artifacts/vprofile-1.0.1.war'
                }
            }
        }
    stage('Deploy') {
            steps {
                sshagent(credentials: ['ec2-jenkins-creds']) {
                sh 'scp -o StrictHostKeyChecking=no target/vprofile-1.0.1.war ubuntu@18.206.61.99:/home/ubuntu'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@18.206.61.99 "sudo systemctl restart tomcat9"'
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@18.206.61.99 "sudo cp vprofile-1.0.1.war /var/lib/tomcat9/webapps"'
              }
            }
        }
    }
}
}