import org.apache.maven.model.Model

@NonCPS
def readVersion() {
    def pom = readMavenPom file: 'pom.xml'
    def version = pom.version
    return version
}

pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage('Read POM') {
            steps {
                script {
                    def version = readVersion()
                    version = pom.version
                    echo "Project version is: ${version}"
                }
            }
        }
        stage("Build Artifact") {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }
    }
}