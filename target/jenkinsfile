pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    stages {
        stage("Build Artifact") {
        steps {
            script {
                sh 'mvn clean package -DskipTests'
            }
        }
        } 
          stage("Test") {
          steps {
            script {
                sh 'mvn test'
            }
        }
        }
          stage("deploy") {
          steps {
            sshagent(credentials: ['ubuntu']) {
              sh "scp -o StrictHostKeyChecking=no target/vprofile-v2.war ubuntu@34.203.40.158:~/"
              sh "ssh ubuntu@34.203.40.158 'sudo mv ~/vprofile-v2.war /var/lib/tomcat9/webapps/'"
              sh "ssh ubuntu@34.203.40.158 'sudo systemctl restart tomcat9'"
            }
            }
        }
   } 
}
